<div class="container">
  <div class="row">
    <div class="col-xs-5 col-sm-Offset-4">
      <div class="title">
        <h1>Awesome Artists</h1>
      </div>
        <% @artists.each do |artist| %>
          <div class="card-artist">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <div class="card-artist-infos">
              <h2><%= artist.name %></h2>
              <p><%= artist.tagline %></p>

              <%= link_to "Book now", "#", class: "btn btn-flat" %>



            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>




